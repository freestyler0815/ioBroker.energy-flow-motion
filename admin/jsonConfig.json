        },
        "_batteryPowerData":{
            "type": "panel",
            "label": "Battery Power Data",
            "items": {
                "batChargeDataTable":{
                    "type": "table",
                    "label": "Battery Charge Power Data Source Table",
                    "items": [
                        {
                            "type": "objectId",
                            "width": "250px",
                            "title": {"en": "ObjectID"},
                            "attr": "batChargeObjectId",
                            "filter": false,
                            "sort": true,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "width": "50px",
                            "title": {"en": "Factor (+/-)"},
                            "attr": "batChargeFactor",
                            "filter": false,
                            "sort": true,
                            "default": "1"
                        }
                    ]

                },
                "batDischargeDataTable":{
                    "newLine": true,
                    "type": "table",
                    "label": "Battery Discharge Power Data Source Table",
                    "items": [
                        {
                            "type": "objectId",
                            "width": "250px",
                            "title": {"en": "ObjectID"},
                            "attr": "batDischargeObjectId",
                            "filter": false,
                            "sort": true,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "width": "50px",
                            "title": {"en": "Factor (+/-)"},
                            "attr": "batDischargeFactor",
                            "filter": false,
                            "sort": true,
                            "default": "1"
                        }
                    ]

                }
            }
        }
    }

}